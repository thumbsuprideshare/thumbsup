.search
  %h3
    %form
      .form-group
        = label_tag :starting_point, "Starting Point"
        = text_area_tag :starting_point, nil, class: "form-control"

        .form-group
        = label_tag :destination, "Destination"
        = text_area_tag :destination, nil, class: "form-control"

        .form-group
        = label_tag :date_time, "Date"
        = text_field_tag :date, nil, class: "datepicker form-control"
        :javascript
          $(document).ready(function(){
            $('.datepicker').datepicker();
            });

        .form-group
        = label_tag :role, "Driver or Rider?"
        = radio_button :role; :driver, "Driver"
        = radio_button :role; :rider, "Rider"

        .form-group
        %button#submitB.block{:type => "button"} Submit
        :javascript
          document.getElementById("submitB").onclick = function () {
            location.href = "seekOrOffer.html.haml";
            };
